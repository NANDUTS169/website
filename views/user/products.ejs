<%- include("../../views/partials/user/header") %>

<style>
  html, body {
    overflow-x: hidden !important;
  }

  .row {
    margin-left: 0;
    margin-right: 0;
  }

  .container-fluid, .container {
    padding-left: 15px;
    padding-right: 15px;
  }

  .product-entry {
    position: relative;
    transition: transform 0.2s ease;
  }

  .product-entry:hover {
    transform: scale(1.03);
  }

  .prod-img img {
    max-height: 300px;
    object-fit: cover;
    width: 100%;
  }

  .wishlist-btn {
    position: absolute;
    top: 10px;
    right: 10px;
    z-index: 100;
  }
</style>

<div class="colorlib-product">
  <div class="container">
    <div class="row">
      <div class="col-sm-8 offset-sm-2 text-center colorlib-heading">
        <h2>All Products</h2>
      </div>
    </div>

    <div class="row">
      <% if (products && products.length > 0) { %>
        <% products.forEach(product => { %>
          <div class="col-lg-3 col-md-4 col-sm-6 mb-4 text-center d-flex">
            <div class="product-entry border position-relative w-100">
              <!-- Product Image -->
              <a href="/productdetails/<%= product._id %>" class="prod-img d-block">
                <img src="/uploads/product-images/<%= product.productImage[0] %>" class="img-fluid" alt="<%= product.productName %>">
              </a>

              <!-- Wishlist Button -->
              <a href="/addToWishlist?id=<%= product._id %>" class="wishlist-btn">
                <i class="icon-heart" style="font-size: 20px; color: red;"></i>
              </a>

              <!-- Product Info -->
              <div class="desc">
                <h2><a href="/productDetails?id=<%= product._id %>"><%= product.productName %></a></h2>
                <span class="price">â‚¹ <%= product.salePrice %></span>
                <p><a href="/addToCart/<%= product._id %>" class="btn btn-sm btn-primary mt-2">Add to Cart</a></p>
              </div>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <div class="col-md-12 text-center">
          <p>No products available right now.</p>
        </div>
      <% } %>
    </div>

    <!-- Pagination (Optional, if needed) -->
    
    <div class="row">
      <div class="col-md-12 text-center">
        <ul class="pagination">
          <li class="page-item"><a class="page-link" href="#">Prev</a></li>
          <li class="page-item active"><a class="page-link" href="#">1</a></li>
          <li class="page-item"><a class="page-link" href="#">2</a></li>
          <li class="page-item"><a class="page-link" href="#">Next</a></li>
        </ul>
      </div>
    </div>
   

  </div>
</div>

<%- include("../../views/partials/user/footer") %>
