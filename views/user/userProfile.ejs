        email: "<%= user.email %>",
        phone: "<%= user.phone %>",
        profileImage: "<%= user.profileImage || 'https://via.placeholder.com/100/667eea/ffffff?text=' + (user.name ? user.name.charAt(0) : 'U') %>",
        memberSince: "<%= new Date(user.createdAt).toLocaleString('default', { month: 'long', year: 'numeric' }) %>"
